# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/educrafters
PGUSER=username
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
PGDATABASE=educrafters

# Stripe API Keys (Get these from https://dashboard.stripe.com/apikeys)
# The publishable key (starts with pk_) - This is safe to include in client-side code
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# The secret key (starts with sk_) - Keep this confidential
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# Node Environment (development, production, test)
NODE_ENV=development

# Server Configuration
PORT=3000

# Stripe Product/Price IDs (for subscription features)
# STRIPE_PRICE_ID=price_123456789